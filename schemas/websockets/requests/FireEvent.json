{
	"$id": "https://raw.githubusercontent.com/u-packs/HASchemas/main/schemas/websockets/requests/FireEvent.json",
	"$schema": "http://json-schema.org/draft-06/schema#",
	"description": "https://developers.home-assistant.io/docs/api/websocket/#fire-an-event",
	"type": "object",
	"title": "FireEventMsg",
	"properties": {
		"type": {
			"description": "Type key of the message.",
			"type": "string",
			"const": "fire_event",
			"default": "fire_event"
		},
		"id": {
			"description": "The ID of the response will point at the original ID of this message.",
			"type": "integer",
			"minimum": 0
		},
		"event_type": {
			"description": "You can either listen to all events or to a specific event type.",
			"type": "string"
		},
		"event_data": {
			"description": "The data to send with the event.",
			"type": "object"
		}
	},
	"required": [
		"access_token",
		"type",
		"event_type"
	],
	"additionalProperties": false
}
